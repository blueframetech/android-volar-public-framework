<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="10dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_width="125dp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="Version:"
	        android:textSize="16dp"
	        android:textStyle="bold" />
	    <TextView
	        android:id="@+id/version"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text=""
	        android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_width="125dp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="Latency:"
	        android:textSize="16dp"
	        android:textStyle="bold" />
	    <TextView
	        android:id="@+id/latency"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="0 ms"
	        android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_width="125dp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="Bitrate:"
	        android:textSize="16dp"
	        android:textStyle="bold" />
	    <TextView
	        android:id="@+id/bitrate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="0 Mbps"
	        android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_width="125dp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="FPS:"
	        android:textSize="16dp"
	        android:textStyle="bold" />
	    <TextView
	        android:id="@+id/fps"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="0"
	        android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_width="125dp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="Sample rate:"
	        android:textSize="16dp"
	        android:textStyle="bold" />
	    <TextView
	        android:id="@+id/sample_rate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="0 kHz"
	        android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_width="125dp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="Buffered:"
	        android:textSize="16dp"
	        android:textStyle="bold" />
	    <TextView
	        android:id="@+id/buffered"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="0 s"
	        android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_width="125dp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="Load time:"
	        android:textSize="16dp"
	        android:textStyle="bold" />
	    <TextView
	        android:id="@+id/load_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="0 s"
	        android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    <TextView
	        android:layout_width="125dp"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="State:"
	        android:textSize="16dp"
	        android:textStyle="bold" />
	    <TextView
	        android:id="@+id/state"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:text="IDLE"
	        android:textSize="16dp" />
    </LinearLayout>
    <Button
        android:id="@+id/copy_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Copy Player UUID" />
</LinearLayout>
