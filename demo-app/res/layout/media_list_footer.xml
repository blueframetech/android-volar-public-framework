<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/black_bg" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:paddingBottom="2.5dp"
	    android:paddingTop="5dp" >
		<TextView
		    android:id="@+id/upcoming"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:textColor="@drawable/footer_text_selector"
		    android:textSize="13dp"
		    android:background="@drawable/left_footer_button_selector" />
		<TextView
		    android:id="@+id/live"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:textColor="@drawable/footer_text_selector"
		    android:textSize="13dp"
		    android:background="@drawable/mid_footer_button_selector" />
		<TextView
		    android:id="@+id/archived"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:textColor="@drawable/footer_text_selector"
		    android:textSize="13dp"
		    android:background="@drawable/right_footer_button_selector" />
    </LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:paddingBottom="5dp"
	    android:paddingTop="2.5dp" >
		<TextView
		    android:id="@+id/from_date"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="From Date"
		    android:textColor="@drawable/footer_text_selector"
		    android:textSize="13dp"
		    android:background="@drawable/left_footer_button_selector" />
		<TextView
		    android:id="@+id/to_date"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="To Date"
		    android:textColor="@drawable/footer_text_selector"
		    android:textSize="13dp"
		    android:background="@drawable/mid_footer_button_selector" />
		<TextView
		    android:id="@+id/section"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:text="Section"
		    android:textColor="@drawable/footer_text_selector"
		    android:textSize="13dp"
		    android:background="@drawable/right_footer_button_selector" />
    </LinearLayout>
</LinearLayout>