<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="45dp"
	android:background="@drawable/title_gradient" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/black" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:weightSum="2" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1" />
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/black_bg"
			android:layout_weight="1" />	
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:weightSum="3"
	    android:layout_centerVertical="true"
	    android:padding="5dp" >
		<Button
		    android:id="@+id/upcoming"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:padding="5dp"
		    android:textColor="@drawable/footer_text_selector"
		    android:textSize="13dp"
		    android:background="@drawable/left_footer_button_selector" />
		<Button
		    android:id="@+id/live"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:padding="5dp"
		    android:textColor="@drawable/footer_text_selector"
		    android:textSize="13dp"
		    android:background="@drawable/mid_footer_button_selector" />
		<Button
		    android:id="@+id/archived"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:padding="5dp"
		    android:textColor="@drawable/footer_text_selector"
		    android:textSize="13dp"
		    android:background="@drawable/right_footer_button_selector" />
    </LinearLayout>
</RelativeLayout>