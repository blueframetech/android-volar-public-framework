<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#696868"
                android:centerColor="#414040"
                android:endColor="#414040"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#353535" />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="0.1dp" 
     			android:topLeftRadius="0.1dp" android:topRightRadius="4dp"/> 
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item android:state_selected="true" >
        <shape>
            <gradient
                android:startColor="#565555"
                android:centerColor="#323131"
                android:endColor="#323131"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#353535" />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="0.1dp" 
     			android:topLeftRadius="0.1dp" android:topRightRadius="4dp"/> 
        </shape>
    </item>
    
    <item android:state_selected="false" android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#99696868"
                android:centerColor="#99414040"
                android:endColor="#99414040"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#99353535" />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="0.1dp" 
     			android:topLeftRadius="0.1dp" android:topRightRadius="4dp"/> 
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item android:state_selected="false" >
        <shape>
            <gradient
                android:startColor="#99565555"
                android:centerColor="#99323131"
                android:endColor="#99323131"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#99353535" />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="0.1dp" 
     			android:topLeftRadius="0.1dp" android:topRightRadius="4dp"/> 
        </shape>
    </item>
</selector>